<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
            android:text="@string/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lid"
            android:labelFor="@id/tid"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/tid"
            android:inputType="textMultiLine"
            android:autofillHints=""/>
    <TextView
            android:text="@string/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lbuttons"
            android:labelFor="@id/buttons"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/buttons">
        </LinearLayout>
    </ScrollView>
    <Button
            android:text="@string/addnew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bnew" android:layout_marginBottom="8dp"
    />
    <Button
            android:text="@string/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/bsave"
            android:layout_marginBottom="8dp"
    />
</LinearLayout>